{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/openmfp/extension-content-operator/pkg/validation/content-configuration",
  "$defs": {
    "LuigiConfigData": {
      "properties": {
        "nodeDefaults": {
          "entityType": {
            "type": "string"
          },
          "isolateView": {
            "type": "boolean"
          }
        },
        "nodes": {
          "items": {
            "$ref": "#/$defs/Node"
          },
          "type": "array"
        },
        "texts": {
          "items" : {
            "$ref": "#/$defs/Text"
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": ["nodes"]
    },
    "Category": {
      "properties": {
        "label": {
          "type": "string"
        },
        "icon": {
          "type": "string"
        },
        "collapsible": {
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": []
    },
    "Webcomponent": {
      "properties": {
        "selfRegistered": {
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": []
    },
    "Entity": {
      "properties": {
        "id": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": []
    },
    "LuigiConfigFragment": {
      "properties": {
        "data": {
          "$ref": "#/$defs/LuigiConfigData"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": ["data"]
    },
    "Node": {
      "properties": {
        "entityType": {
          "type": "string"
        },
        "pathSegment": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "category": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "$ref": "#/$defs/Category"
            }
          ]
        },
        "icon": {
          "type": "string"
        },
        "keepSelectedForChildren": {
          "type": "boolean"
        },
        "url": {
          "type": "string"
        },
        "children": {
          "items": {
            "$ref": "#/$defs/Node"
          },
          "type": "array"
        },
        "defineEntity": {
          "$ref": "#/$defs/Entity"
        },
        "loadingIndicator": {
          "type": "object"
        },
        "hideFromNav": {
          "type": "boolean"
        },
        "visibleForFeatureToggles": {
          "items": {
            "type": "string"
          },
          "type": "array"
        },
        "virtualTree": {
          "type": "boolean"
        },
        "requiredIFramePermissions": {
          "type": "object"
        },
        "compound": {
            "type": "object"
        },
        "initialRoute": {
          "type": "string"
        },
        "layoutConfig": {
          "type": "object"
        },
        "context": {
          "type": "object"
        },
        "webcomponent": {
          "$ref": "#/$defs/Webcomponent"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": []
    },
    "Text": {
      "properties": {
        "locale": {
          "type": "string",
          "minLength": 0
        },
        "textDictionary": {
          "type": "object"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": ["locale", "textDictionary"]
    }
  },
  "properties": {
    "name": {
      "type": "string"
    },
    "luigiConfigFragment": {
      "$ref": "#/$defs/LuigiConfigFragment"
    }
  },
  "additionalProperties": true,
  "type": "object",
  "required": ["name", "luigiConfigFragment"]
}