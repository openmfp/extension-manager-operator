{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/openmfp/extension-content-operator/pkg/validation/content-configuration",
  "$defs": {
    "LuigiConfigData": {
      "properties": {
        "nodeDefaults": {
          "entityType": {
            "type": "string"
          },
          "isolateView": {
            "type": "boolean"
          }
        },
        "nodes": {
          "items": {
            "$ref": "#/$defs/Node"
          },
          "type": "array"
        },
        "texts": {
          "items" : {
            "$ref": "#/$defs/Text"
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": ["nodes"]
    },
    "LuigiConfigFragment": {
      "properties": {
        "data": {
          "$ref": "#/$defs/LuigiConfigData"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": ["data"]
    },
    "Node": {
      "properties": {
        "entityType": {
          "type": "string"
        },
        "pathSegment": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "icon": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "Text": {
      "locale": {
        "type": "string",
        "minLength": 0
      },
      "textDictionary": {
        "type": "object"
      },
      "required": ["locale", "textDictionary"]
    }
  },
  "properties": {
    "name": {
      "type": "string"
    },
    "luigiConfigFragment": {
      "$ref": "#/$defs/LuigiConfigFragment"
    }
  },
  "additionalProperties": true,
  "type": "object",
  "required": ["name", "luigiConfigFragment"]
}