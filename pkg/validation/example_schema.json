{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/openmfp/extension-content-operator/pkg/validation/content-configuration",
  "$defs": {
    "LuigiConfigData": {
      "properties": {
        "nodes": {
          "items": {
            "$ref": "#/$defs/Node"
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": ["nodes"]
    },
    "LuigiConfigFragment": {
      "properties": {
        "data": {
          "$ref": "#/$defs/LuigiConfigData"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": ["data"]
    },
    "Node": {
      "properties": {
        "entityType": {
          "type": "string"
        },
        "pathSegment": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "icon": {
          "type": "string"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": ["entityType", "pathSegment", "label", "icon"]
    }
  },
  "properties": {
    "name": {
      "type": "string"
    },
    "luigiConfigFragment": {
      "items": {
        "$ref": "#/$defs/LuigiConfigFragment"
      },
      "type": "array"
    }
  },
  "additionalProperties": false,
  "type": "object",
  "required": ["name", "luigiConfigFragment"]
}